<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.application.Platform?>

<VBox alignment="CENTER" styleClass="background" prefWidth="600.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.User.UserDashboardController">

    <ImageView fitWidth="600.0" fitHeight="100.0">
        <image>
            <Image url="@../../image/user.png"/>
        </image>
    </ImageView>

    <Separator/>
    <Label fx:id="welcomeLbl" styleClass="heading"/>
    <Separator/>

    <HBox styleClass="hbox">
        <Button fx:id="selectSupplierBtn" prefWidth="400"/>
        <Button fx:id="orderHistoryBtn" text="Order History" prefWidth="400" onAction="#viewOrderHistory"/>
        <Button text="Close" prefWidth="400" onAction="#close"/>
    </HBox>
    
    <stylesheets>
        <URL value="@../style.css"/>
    </stylesheets>

</VBox>
